---
import type { ResumeData } from "@/data/resume-data";
import CertificationsList from "./body/aside/certifications/CertificationsList.astro";
import EducationList from "./body/aside/education/EducationList.astro";
import LanguagesList from "./body/aside/languages/LanguagesList.astro";
import LinksList from "./body/aside/links/LinksList.astro";
import ReferencesList from "./body/aside/references/ReferencesList.astro";
import SkillsList from "./body/aside/skills/SkillsList.astro";
import NotableProjectsList from "./body/main/notable-projects/NotableProjectsList.astro";
import ProfessionalSummary from "./body/main/ProfessionalSummary.astro";
import WorkExperienceList from "./body/main/work-experience/WorkExperienceList.astro";

type Props = {
    data: ResumeData;
};

const { data } = Astro.props as Props;
---

<section class="body">
    <main>
        <ProfessionalSummary summary={data.summary} />
        {
            data.experience && (
                <Fragment>
                    <hr class="full" />
                    <WorkExperienceList experience={data.experience} />
                </Fragment>
            )
        }
        {
            data.notableProjects && (
                <Fragment>
                    <hr class="full" />
                    <NotableProjectsList projects={data.notableProjects} />
                </Fragment>
            )
        }
    </main>
    <aside>
        {
            data.education && (
                <Fragment>
                    <EducationList education={data.education} />
                    <hr class="full" />
                </Fragment>
            )
        }
        {
            data.skills && (
                <Fragment>
                    <SkillsList skills={data.skills} />
                    <hr class="full" />
                </Fragment>
            )
        }
        <LanguagesList languages={data.languages} />
        {
            data.certifications && (
                <Fragment>
                    <hr class="full" />
                    <CertificationsList certifications={data.certifications} />
                </Fragment>
            )
        }
        {
            data.links && (
                <Fragment>
                    <hr class="full" />
                    <LinksList links={data.links} />
                </Fragment>
            )
        }
        {
            data.references && (
                <Fragment>
                    <hr class="full" />
                    <ReferencesList references={data.references} />
                </Fragment>
            )
        }
    </aside>
</section>
