---
import type { ResumeData } from "@/data/resume-data";
import NameAndTitle from "./header/NameAndTitle.astro";
import ContactDetails from "./header/ContactDetails.astro";

type props = {
    data: ResumeData;
};

const { data } = Astro.props as props;
---

<header>
    <NameAndTitle {data} />
    <ContactDetails {data} />
</header>

<style>
    header {
        @apply flex flex-row justify-between border-b-gray-300 border-b-2 border-solid pb-2 mb-1;
    }
</style>
